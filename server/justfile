set dotenv-load := true

dev:
    (cd ../client && just build) && just run

run:
    gleam run

parrot:
    gleam run -m parrot

style:
    ./bin/tailwindcss-linux-x64 -i priv/static/server/input.css -o priv/static/server/output.css --minify --watch

watch:
    watchexec -e gleam --stop-timeout 500ms -r just run
